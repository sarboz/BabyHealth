<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/myCustomMenuLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingTop="@dimen/dp5"
    android:paddingBottom="@dimen/dp5">

        <ImageButton
            android:id="@+id/color"
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp30"
            android:layout_marginEnd="@dimen/dp10"
            android:background="#00000000"
            android:contentDescription="color"
            android:maxLines="1"
            android:src="@drawable/ic_color_lens_black_24dp"
            tools:src="@drawable/ic_color_lens_black_24dp" />

        <ImageButton
            android:id="@+id/copy_"
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp30"
            android:layout_marginEnd="@dimen/dp10"
            android:background="#00000000"
            android:contentDescription="copy"
            android:maxLines="1"
            android:src="@drawable/ic_content_copy_black_24dp"
            tools:src="@drawable/ic_content_copy_black_24dp" />

        <ImageButton
            android:id="@+id/coment"
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp30"
            android:layout_marginEnd="@dimen/dp10"
            android:background="#00000000"
            android:contentDescription="copy"
            android:maxLines="1"
            android:src="@drawable/ic_comment_black_24dp"
            tools:src="@drawable/ic_comment_black_24dp" />


        <ImageButton
            android:id="@+id/share"
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp30"
            android:layout_marginEnd="10dp"
            android:background="#00000000"
            android:contentDescription="copy"
            android:maxLines="1"
            android:src="@drawable/ic_share_black"
            tools:src="@drawable/ic_share_black" />


        <ImageButton
            android:id="@+id/save"
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp30"
            android:layout_marginEnd="@dimen/dp10"
            android:background="#00000000"
            android:contentDescription="copy"
            android:maxLines="1"
            android:src="@drawable/ic_save_black_24dp"
            tools:src="@drawable/ic_save_black_24dp" />



</LinearLayout>